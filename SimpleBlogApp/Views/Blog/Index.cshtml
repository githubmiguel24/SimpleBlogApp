@model IEnumerable<BlogPostApp.Post>
@{
    ViewData["Title"] = "Blog Index";
}

<h2>All Blog Posts</h2>
<hr />

<div class="container">
    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">@post.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">By: @post.Author</h6>
                        <p class="card-text">@post.Content.Substring(0, Math.Min(post.Content.Length, 100))...</p>

                        <a asp-action="Details" asp-route-id="@post.Id" class="btn btn-primary">
                            Read More
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>